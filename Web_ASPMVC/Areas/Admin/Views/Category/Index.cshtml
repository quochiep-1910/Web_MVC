@model List<Models.EF.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Danh sách Danh Mục Tin Tức
}
<div class="float-left">
    <button type="submit" class="btn btn-success">Tìm Kiếm</button>
    <a class="btn btn-primary" href="/Admin/Category/Create">Thêm mới</a>
</div>
<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
    <thead>
        <tr>

            <th>Tên Danh Mục</th>
            <th>Danh Mục Cha</th>
            <th>Thứ Tự</th>
            <th>Ngày Tạo</th>
            <th>Trạng Thái</th>
            <th></th>
        </tr>
    </thead>
    @*<tfoot>
            <tr>
                <th></th>
                <th>Tên Tài Khoản</th>
                <th>Tên</th>
                <th>Nhóm</th>
                <th>Địa Chỉ</th>
                <th>Email</th>
                <th>Ngày Tạo</th>
                <th>Trạng Thái</th>
            </tr>
        </tfoot>*@
    <tbody>
        @foreach (var item in Model)
        {
            <tr id="row_@item.ID">

                <td>@item.Name</td>
                <td>@item.ParentID</td>
                <td>@item.DisplayOrder</td>
                <td>@item.CreatedDate</td>
                <td>@item.Status</td>
            </tr>
        }
    </tbody>
</table>