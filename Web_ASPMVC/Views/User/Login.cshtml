@model Web_ASPMVC.Models.LoginModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="w3l_banner_nav_right">
    <!-- login -->
    <div class="w3_login">
        <h3>Sign In & Sign Up</h3>
        <div class="w3_login_module">
            <div class="module form-module">
                <div class="toggle">
                    <i class="fa fa-times fa-pencil"></i>
                    <div class="tooltip">Click Me</div>
                </div>
                <div class="form">
                    <h2>Login to your account</h2>

                    @using (Html.BeginForm("Login", "User", FormMethod.Post))
                    {
                        <div class="form-group">
                            <label class="control-label col-md-2"></label>
                            <div class="col-md-10">
                                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        @Html.TextBoxFor(model => model.UserName, new { @type = "text", @name = "Username", @placeholder = "Username", @required = " " })
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })

                        @Html.PasswordFor(model => model.Password, new { @type = "password", @name = "Password", @placeholder = "Password", @required = " " })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        <br />
                        <input type="submit" value="Login">

                        <a href="/User/LoginFacebook" class="btn btn-facebook">

                            <i class="fa fa-facebook-square"> </i>
                            Đăng nhập bằng Facebook
                        </a>
                     }
                </div>

                <div class="cta"><a href="#">Forgot your password?</a></div>
            </div>
        </div>
        <script>
            $('.toggle').click(function () {
                // Switches the Icon
                $(this).children('i').toggleClass('fa-pencil');
                // Switches the forms
                $('.form').animate({
                    height: "toggle",
                    'padding-top': 'toggle',
                    'padding-bottom': 'toggle',
                    opacity: "toggle"
                }, "slow");
            });
        </script>
    </div>
    <!-- //login -->
</div>
<div class="clearfix"></div>

